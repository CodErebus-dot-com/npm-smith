{
	"name": "npm-smith",
	"version": "0.0.1-beta2.4",
	"description": "The only npmsmith you need to help you create npm packages",
	"bin": {
		"npm-smith": "dist/index.js"
	},
	"exports": {
		"./bin": {
			"require": "./dist/index.cjs",
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"typesVersions": {
		"*": {
			"index": [
				"dist/index.d.ts"
			]
		}
	},
	"type": "module",
	"files": [
		"dist",
		"README.md",
		"package.json"
	],
	"homepage": "https://github.com/CodErebus-dot-com/npm-smith#readme",
	"repository": {
		"type": "git",
		"url": "https://github.com/CodErebus-dot-com/npm-smith"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"clean": "rimraf dist node_modules",
		"bump": "bump",
		"pub": "pnpm bump && pnpm build && pnpm publish --no-git-checks",
		"lint": "eslint . --ext ts,tsx,js,jsx --report-unused-disable-directives --max-warnings 0",
		"lint:fix": "eslint . --ext ts,tsx,js,jsx --report-unused-disable-directives --max-warnings 0 --fix",
		"check-types": "tsc --noEmit",
		"prettify": "prettier --ignore-path .gitignore --write \"**/*.(js|jsx|ts|tsx)\"",
		"format": "npm run lint:fix && npm run prettify",
		"prepare": "husky",
		"commit": "cz",
		"build:utils": "turbo build --filter utils",
		"pub:utils": "pnpm --filter=utils pub",
		"pub:templates": "pnpm --filter=templates pub"
	},
	"dependencies": {
		"@clack/prompts": "^0.7.0",
		"@code-shaper/shaper-utils": "^1.0.5",
		"@npm-smith/templates": "1.1.2-beta0.3",
		"@npm-smith/utils": "1.1.0",
		"@npmcli/package-json": "^5.0.0",
		"lodash": "^4.17.21",
		"node-emoji": "^2.1.0",
		"picocolors": "^1.0.0",
		"rimraf": "^5.0.5",
		"shell-artist": "^2.7.2"
	},
	"devDependencies": {
		"@commitlint/cli": "19.2.1",
		"@commitlint/config-conventional": "19.1.0",
		"@jsdevtools/version-bump-prompt": "6.1.0",
		"@types/fs-extra": "^11.0.4",
		"@types/lodash": "^4.17.0",
		"@types/node": "^20.11.30",
		"@types/npmcli__package-json": "^4.0.3",
		"@typescript-eslint/eslint-plugin": "7.3.1",
		"@typescript-eslint/parser": "7.3.1",
		"commitizen": "4.3.0",
		"cz-conventional-changelog": "3.3.0",
		"eslint": "8.57.0",
		"eslint-plugin-jsx-a11y": "6.8.0",
		"eslint-plugin-react": "7.34.1",
		"eslint-plugin-react-hooks": "4.6.0",
		"fs-extra": "^11.2.0",
		"husky": "9.0.11",
		"lint-staged": "15.2.2",
		"prettier": "3.2.5",
		"tsup": "^8.0.2",
		"turbo": "^1.13.0",
		"typescript": "^5.4.3"
	},
	"license": "MIT",
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"prettier --write",
			"eslint --fix"
		],
		"*.{json,yaml,md,html}": [
			"prettier --write"
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"body-leading-blank": [
				2,
				"always"
			]
		}
	},
	"config": {
		"commitizen": {
			"path": "node_modules/cz-conventional-changelog"
		}
	}
}
